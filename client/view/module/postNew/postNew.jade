template(name="postNew")
	.form.postNew
		.photo.center
			with image
				if this.isUploaded
					if this.hasStored "500"
						label.full-photo(style="background-image:url({{imageUrl}})")
							input.full-photo(type="file" accept="image/*" id="fileselect" style="opacity:0")
					else
						p.full-text Resizing...
						+spinner
				else
					p.full-text Uploading...
					+spinner
			else
				p.full-text Click to insert image
				label.full-photo
					input.full-photo(type="file" accept="image/*" id="fileselect" style="opacity:0")
		textarea.description(placeholder="Description...") {{description}}
		button.submit {{T "save"}}
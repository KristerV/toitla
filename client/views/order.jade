template(name="order")
	.order-block(data-order-id="{{_id}}" class="{{#if wonOffer}}green-glow{{/if}}")
		section.form-box
			header
				.order
					h3 {{info.description}}
					p {{info.date}} {{info.time}} {{info.location}}
				a.cancel-offer {{T "Cancel offer"}}
			.offer
				with offerData _id
					with authorData
						h3 {{name}}
						p {{city}}
					if offerWonBy

						h2 {{T "Offer"}}
						p {{content}}
						p.price {{T "Price"}} {{price}}
						if isClient
							with authorData
								h3 {{T "Great! You've found a cook. Here is the cooks specific contact information."}}
								p {{T "Phone nr"}}: {{telephone}}
								p {{T "Address"}}: {{city}}, {{street}} {{house}}
						else
							if wonOffer
								h3 {{T "Hooray! You've won a client to cook for! Please make sure you've exchanged the necessary contact information."}}
							else
								h3 {{T "Order has been confirmed. This means the food will be ready on time and the client will pick it up, unless specified otherwise in the chat"}}
					else
						if currentUser
							if editingOffer
								form(name="offer" data-offer-id="{{_id}}")
									h3.uppercase {{T "Your offer"}}
									textarea(name="content" placeholder="{{T 'A detailed description of the food you want to offer'}}") {{content}}
									footer
										input(type="text" class="small" name="price" placeholder="{{T 'Price'}}" value="{{price}}")
										input(type="submit" value="{{T 'Send offer'}}")
							else
								h2 {{T "Offer"}}
								p {{content}}
								p.price {{T "Price"}} {{price}}
								footer
									p.feedback {{T "Waiting for client feedback"}}
									a.change-offer.button {{T "Change offer"}}
						else
							h2 {{T "Offer"}}
							p {{content}}
							p.price {{T "Price"}}  {{price}}
							a.confirm-offer.button {{T "Confirm offer"}}
		section.chat.form-box.beige
			h3.uppercase {{T "Chat"}}
			with offerData _id
				each messages
					.message
						div.uppercase.gray {{author}} {{time}}
						p {{msg}}
				form(name="chat" data-offer-id="{{_id}}")
					textarea(name="msg")
					input(type="submit" value="{{T 'Answer'}}")
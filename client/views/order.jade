template(name="order")
	.order-block(data-order-id="{{_id}}")
		section.form-box
			header
				.order
					h3 {{info.description}}
					p {{info.date}} {{info.time}} {{info.location}}
				a.cancel-offer {{T "Cancel offer"}}
			.offer
				with offerData _id
					if currentUser
						if editingOffer
							form(name="offer" data-offer-id="{{_id}}")
								h3.uppercase {{T "Your offer"}}
								textarea(name="content" placeholder="{{T 'A detailed description of the food you want to offer'}}") {{content}}
								footer
									input(type="text" class="small" name="price" placeholder="{{T 'Price'}}" value="{{price}}")
									input(type="submit" value="{{T 'Send offer'}}")
						else
							h2 {{T "Offer"}}
							p {{content}}
							p {{price}}
							p Waiting for client feedback
							a.change-offer {{T "Change offer"}}
					else
						h2 {{T "Offer"}}
						p {{content}}
						p {{price}}
		section.chat.form-box.beige
			h3.uppercase {{T "Client asks"}}
			with offerData _id
				each messages
					.message
						div.uppercase.gray {{author}} {{time}}
						p {{msg}}
				form(name="chat" data-offer-id="{{_id}}")
					textarea(name="msg")
					input(type="submit" value="{{T 'Answer'}}")
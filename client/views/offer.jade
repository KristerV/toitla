template(name="offer")
	.offer-block
		.row
			.col-sm-12
				p.float-left {{chefName}}
				p.float-right Chef
				p.float-right Chat
				p.float-right
					if editingOffer
						p {{T "chef is editing"}}
					else
						a {{T "Confirm offer"}}
		.row
			.col-sm-12
				p {{content}}
		.row
			.col-sm-12
				p {{T "Price"}}: {{price}}
		hr